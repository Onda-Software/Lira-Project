#:kivy 2.3.0

<Gerenciador>:
    
    TelaInicio:
        name: 'telainicio'
    
    TelaChat:
        name: 'telachat'

    TelaInfo:
        name: 'telainfo'

<TelaInicio>:
    
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            text: 'Olá mundo' 
            font_size: 40

        Button:
            id: botaochat
            text: 'Pressione para conversar com o chat'
            font_size: 25
            on_release: app.root.current = 'telachat'
        
        Button:
            id: botaoinfo
            text: 'Sobre nós'
            font_size: 25
            on_release: app.root.current = 'telainfo'

<TelaChat>:

    BoxLayout:

        orientation:'vertical'

        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Assistente Luna'
                    on_release:app.root.current = 'telainicio'

        ScrollView:
            BoxLayout:
                id: caixa_texto
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height

        BoxLayout:
            size_hint_y: None
            height: 60

            TextInput:
                id : texto
                font_size: 20
                size_hint: 0.8, None
                height: self.minimum_height
                background_color: 0.2, 0.2, 0.2, 1
                foreground_color: 1, 1, 1, 1
                hint_text: "Digite algo aqui"
                hint_text_color: 0.5, 0.5, 0.5, 1

            Button:
                text: 'Enviar'
                size_hint_x: None
                width: 50
                on_release: app.root.get_screen('telachat').addComent()

<CaixaComentario>:

    size_hint_y: None
    size_hint_x: 0.8
    pos_hint: {'right': 1}

    Label:
        id: resposta_dinamica
        
        canvas.before:
            Color:
                rgba: 0.1, 0.5, 0.1, 1
            RoundedRectangle:
                pos: self.pos[0] - self.padding[0] + 25, self.pos[1] + self.padding[1]
                size: self.texture_size[0] + 2 * self.padding[0], self.texture_size[1] + 2 * self.padding[1] + 15
                radius: [10,]
        
        padding: 15, -3, 2, 1
        size_hint_y: None
        halign:'left'
        valign:'middle'
        text_size: self.width - 20, None
        font_size: 20
        size: self.texture_size

<CaixaComentarioLuna>:
    
    size_hint_y: None
    size_hint_x: 0.8
    
    Label:
        id: resposta_dinamica
        
        canvas.before:
            Color:
                rgba: 0.1, 0.5, 0.1, 1
            RoundedRectangle:
                pos: self.pos[0] - self.padding[0], self.pos[1] + self.padding[1]
                size: self.texture_size[0] + 2 * self.padding[0], self.texture_size[1] + 2 * self.padding[1] + 15
                radius: [10,]
        
        padding: 5, -3
        size_hint_y: None
        halign:'left'
        valign: 'middle'
        text_size: self.width - 20, None
        size: self.texture_size
        font_size: 20

<TelaInfo>:

    BoxLayout:
        orientation:'vertical'
        ActionBar:
            pos_hint: {'top': 1}
            ActionView:
                ActionPrevious:
                    title: 'Assistente Luna'
                    on_release:app.root.current = 'telainicio'

        ScrollView:
            BoxLayout:
                orientation:'vertical'
                Label:
                    id: Sobre
                    text: 'https://github.com/Onda-Software/Projeto-Luna'
