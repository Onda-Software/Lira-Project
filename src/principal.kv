#:kivy 2.3.0

<Gerenciador>:
    
    TelaInicio:
        name: 'telainicio'
    
    TelaChat:
        name: 'telachat'

    TelaInfo:
        name: 'telainfo'

<TelaInicio>:
    
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        
        Label:
            text: 'Olá etequiano' 
            font_size: 120
            size_hint_y: 0.4
            color: 255/255, 255/255, 240/255

        Button:
            id: botaochat
            text: 'Pressione para conversar com o chat'
            font_size: 25
            on_release: app.root.current = 'telachat'
        
        Button:
            id: botaoinfo
            text: 'Sobre nós'
            font_size: 25
            on_release: app.root.current = 'telainfo'

        BordaBotao:
            id: botaochat
            size_hint: (0.8,0.5)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            text: 'Converse\ncom a Luna'
            color: 255/255, 255/255, 240/255
            font_size: 25
            on_release: app.root.current = 'telachat'
            multiline: True

        BordaBotao:
            id: botaoinfo
            size_hint: (0.8,0.5)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            text: 'Sobre nós'
            color: 255/255, 255/255, 240/255
            font_size: 25
            on_release: app.root.current = 'telainfo'

        Widget:  # Adiciona um espaço vazio entre os botões
            size_hint_y: None
            height: 20

<BordaBotao@Button>:
    background_color: (0,0,0,0)
    canvas.before:
        Color:
            rgba: (243/255, 154/255, 75/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]

<TelaChat>:

    BoxLayout:

        orientation:'vertical'

        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Assistente Luna'
                    color: 255/255, 255/255, 240/255
                    on_release:app.root.current = 'telainicio'

        ScrollView:
            BoxLayout:
                id: caixa_texto
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height

        BoxLayout:
            size_hint_y: None
            height: 60
            padding: [6, 5, 6, 5]
            spacing: 11
            BoxLayout:
                size_hint_x: 0.8
                #padding: [10, 10]
                RelativeLayout: #parte do textinput
                    canvas:
                        Color:
                            rgba: 0, 0, 0, 0.59
                        RoundedRectangle:
                            size: self.width, self.height * 3
                            pos: self.pos
                            radius: [10]
                    RoundedTextInput:
                        id: texto
                        font_size: 20
                        padding: [15, 16] 
                        size_hint: None, None
                        size: self.parent.width, self.parent.height * 3
                        hint_text: "Digite algo aqui"
            RelativeLayout: #parte do botão 'enviar'
                size_hint: None, 1
                width: 50
                #padding: [0,16,0,0]       
                BordaBotao:
                    text: 'Enviar'
                    color: 255/255, 255/255, 240/255
                    size_hint: None, None
                    height: self.parent.height
                    padding: [15,16]
                    pos_hint: {'center_y': 0.6} 
                    size: self.parent.width, self.parent.height 
                    on_release: app.root.get_screen('telachat').addComent(texto.text)

<RoundedTextInput@TextInput>:
    background_color: (0,0,0,0)
    foreground_color: 255/255, 255/255, 240/255, 1
    hint_text_color: 0.5, 0.5, 0.5, 1
    cursor_color: 1,0,0,1
    
<CaixaComentario>:

    size_hint_y: None
    size_hint_x: 0.8
    pos_hint: {'right': 1}

    Label:
        id: resposta_dinamica
        
        canvas.before:
            Color:
                rgba: 0.1, 0.5, 0.1, 1
            RoundedRectangle:
                pos: self.pos[0] - self.padding[0] + 25, self.pos[1] + self.padding[1]
                size: self.texture_size[0] + 2 * self.padding[0], self.texture_size[1] + 2 * self.padding[1] + 15
                radius: [10,]
        
        padding: 15, -3, 2, 1
        size_hint_y: None
        halign:'left'
        valign:'middle'
        text_size: self.width - 20, None
        font_size: 20
        size: self.texture_size

<CaixaComentarioLuna>:
    
    size_hint_y: None
    size_hint_x: 0.8
    
    Label:
        id: resposta_dinamica
        
        canvas.before:
            Color:
                rgba: 0.1, 0.5, 0.1, 1
            RoundedRectangle:
                pos: self.pos[0] - self.padding[0], self.pos[1] + self.padding[1]
                size: self.texture_size[0] + 2 * self.padding[0], self.texture_size[1] + 2 * self.padding[1] + 15
                radius: [10,]
        
        padding: 5, -3
        size_hint_y: None
        halign:'left'
        valign: 'middle'
        text_size: self.width - 20, None
        size: self.texture_size
        font_size: 20

<TelaInfo>:

    BoxLayout:
        orientation:'vertical'
        ActionBar:
            pos_hint: {'top': 1}
            ActionView:
                ActionPrevious:
                    title: 'Assistente Luna'
                    on_release:app.root.current = 'telainicio'

        ScrollView:
            BoxLayout:
                orientation:'vertical'
                Label:
                    id: Sobre
                    text: 'https://github.com/Onda-Software/Projeto-Luna'
